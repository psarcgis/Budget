<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:layout_marginBottom="50dp"
        android:id="@+id/listViewFrameAllBudgetsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <ListView
            android:id="@+id/listViewAllBudgetsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>



        <RelativeLayout
            android:id="@+id/listLoadingPanelAllBudgetsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center" >

            <ProgressBar
                android:id="@+id/listProgressAllBudgetsFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:indeterminate="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/header_shadow">

        </RelativeLayout>

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="30dp"
        android:id="@+id/addAllBudgetsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="5dp"
        app:borderWidth="0dp"
        android:src="@drawable/add_icon_white1"
        app:rippleColor="@color/colorCirclePressed"
        app:backgroundTint="@color/colorListNeutral"
        android:layout_gravity="bottom|end"
        android:clickable="true" />


</android.support.design.widget.CoordinatorLayout>